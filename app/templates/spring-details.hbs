<p>Reviews:</p>
<ul class="review-list">
  {{#each r in model.reviews}}
    <li>
      {{r.reviewerName}}
      {{r.description}}
    </li>
  {{/each}}
</ul>

<form id="add-review">
  {{input value = reviewerName placeholder="Username"}}
  {{input value = rating placeholder="Rating"}}
  {{textarea value = description placeholder="Description"}}
  <button {{action 'addReview'}} class="btn btn-success">Review {{model.springName}}</button>
</form>
